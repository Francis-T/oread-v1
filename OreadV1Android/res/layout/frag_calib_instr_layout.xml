<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_calib_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff000000" >

    <LinearLayout
        android:id="@+id/panel_calib_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dip"
        android:paddingBottom="20dip"
        android:background="@color/black_overlay" >

        <Spinner
            android:id="@+id/spn_calib_mode"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/calib_modes"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_instr_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1: Pre-calibration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_instr_body"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="10dip"
        android:text="This part will contain the instruction text. However, we have yet to display the instruction text so this placeholder text should do in the meantime. "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read Value:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="---"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_shift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Variance:"
         android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_shift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="---"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_resp_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Response Time:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_resp_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="---"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_calib_param"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calib Param:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_calib_param"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="---"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lbl_total_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Time:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_total_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="---"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/panel_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        
        <Button
            android:id="@+id/btn_cont_read_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Read" />
        
        <Button
            android:id="@+id/btn_cont_read_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Read" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_calibr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/btn_confirm_calib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calibrate!" />

        <Button
            android:id="@+id/btn_opts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Options" />

        <Button
            android:id="@+id/btn_abort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Abort" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_conn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        
        <Button
            android:id="@+id/btn_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connect" />

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disconnect" />
    </LinearLayout>
</LinearLayout>
